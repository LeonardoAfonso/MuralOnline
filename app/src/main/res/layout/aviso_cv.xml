<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cv_aviso">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ufpa_60"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:id="@+id/titulo"
            android:layout_toRightOf="@+id/foto"
            android:layout_alignParentTop="true"
            android:textSize="25sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evento"
            android:id="@+id/evento"
            android:layout_toRightOf="@+id/foto"
            android:layout_below="@+id/titulo"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="local"
            android:id="@+id/local"
            android:layout_toRightOf="@+id/foto"
            android:layout_below="@+id/evento"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="data"
            android:id="@+id/data"
            android:layout_toRightOf="@+id/foto"
            android:layout_below="@+id/local"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hora"
            android:id="@+id/hora"
            android:layout_toRightOf="@+id/data"
            android:layout_below="@+id/local"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            android:onClick=""
            android:src="@android:drawable/ic_menu_delete"
            android:backgroundTint="@color/cardview_dark_background"
            android:layout_alignBottom="@+id/obs"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="OBSERVACAO"
            android:id="@+id/obs"
            android:layout_below="@+id/contato"
            android:layout_toRightOf="@+id/foto"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(91) 9888-8888"
            android:id="@+id/contato"
            android:layout_below="@+id/data"
            android:layout_toRightOf="@+id/foto"
            android:textSize="15sp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>